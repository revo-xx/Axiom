<Window x:Class="AxiomLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AxiomLoader"
        xmlns:views="clr-namespace:AxiomLoader.Views"
        mc:Ignorable="d"
        Title="Axiom Loader" Height="500" Width="700"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#0f0f0f" AllowsTransparency="True">
    
    <Window.Resources>
        <!-- Theme Colors -->
        <SolidColorBrush x:Key="PrimaryColorBrush" Color="#00d2ff"/>
        <SolidColorBrush x:Key="SecondaryColorBrush" Color="#3a7bd5"/>
        <SolidColorBrush x:Key="AccentColorBrush" Color="#ff0055"/>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#b3b3b3"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="#1a1a1a"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Border BorderBrush="#333" BorderThickness="1" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#1a1a1a" CornerRadius="10,10,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock Text="&#xEA18;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource PrimaryColorBrush}" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="AXIOM" Foreground="{DynamicResource PrimaryColorBrush}" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                    <Button Content="✕" HorizontalAlignment="Right" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="CloseButton_Click" Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Login Content -->
            <Grid x:Name="LoginPanel" Grid.Row="1" Visibility="Visible">
                <StackPanel Margin="30" VerticalAlignment="Center" MaxWidth="300">
                    <TextBlock Text="Welcome Back" Foreground="White" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Please login to continue" Foreground="#b3b3b3" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <TextBlock Text="USERNAME" Foreground="{DynamicResource PrimaryColorBrush}" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameBox" Background="#1a1a1a" Foreground="White" BorderBrush="#333" Padding="10" Margin="0,0,0,20"/>

                    <TextBlock Text="PASSWORD" Foreground="{DynamicResource PrimaryColorBrush}" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" Background="#1a1a1a" Foreground="White" BorderBrush="#333" Padding="10" Margin="0,0,0,30"/>

                    <Button x:Name="LoginButton" Content="LOGIN" Height="45" Click="LoginButton_Click" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{DynamicResource PrimaryColorBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock x:Name="StatusText" Text="" Foreground="#ff0055" FontSize="11" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Main Dashboard (Hidden by default) -->
            <Grid x:Name="MainPanel" Grid.Row="1" Background="#0f0f0f" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="#151515" BorderBrush="#333" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,20,0,0">
                            <Button Click="NavButton_Click" Tag="News" Style="{StaticResource NavButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="News" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Click="NavButton_Click" Tag="Inject" Style="{StaticResource NavButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE945;" FontFamily="Segoe MDL2 Assets" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Inject" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Click="NavButton_Click" Tag="Profile" Style="{StaticResource NavButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Profile" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Click="NavButton_Click" Tag="Settings" Style="{StaticResource NavButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Settings" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <Button Grid.Row="1" Click="LogoutButton_Click" Style="{StaticResource NavButtonStyle}" Foreground="#ff0055" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" Foreground="#ff0055" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Logout" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <StackPanel Grid.Row="2" VerticalAlignment="Center" Margin="0,0,0,5" HorizontalAlignment="Center">
                            <Ellipse Width="8" Height="8" Fill="#00ff88" Margin="0,0,0,5"/>
                            <TextBlock Text="ONLINE" Foreground="#00ff88" FontSize="8" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Grid Grid.Column="1" Margin="20">
                    <ContentControl x:Name="ViewContainer"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
